# MARTIAL ARTS MANAGEMENT APP - ENVIRONMENT VARIABLES
# ===========================================

# ===========================================
# NEXT.JS CONFIGURATION
# ===========================================
NODE_ENV=development

# ===========================================
# API CONFIGURATION
# ===========================================
# Primary API base URL (used by the frontend)
NEXT_PUBLIC_API_BASE_URL=http://82.29.165.77:8003

# Backend API URL (server-side only)
API_BASE_URL=http://82.29.165.77:8003

# Backend URL for external API calls (if using separate backend)
NEXT_PUBLIC_BACKEND_URL=http://82.29.165.77:8003

# API timeout settings (in milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# Number of retry attempts for failed API requests
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3

# ===========================================
# AUTHENTICATION CONFIGURATION
# ===========================================
# JWT Secret for token signing/verification
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-martial-arts-app-2024

# JWT token expiration time
JWT_EXPIRES_IN=24h

# Authentication type (jwt, apikey, token, custom)
NEXT_PUBLIC_AUTH_TYPE=jwt

# Default auth token for development (replace with actual token)
NEXT_PUBLIC_AUTH_TOKEN=valid-super-admin-token

# ===========================================
# RECAPTCHA CONFIGURATION
# ===========================================
# Enable/disable reCAPTCHA
NEXT_PUBLIC_RECAPTCHA_ENABLED=false

# reCAPTCHA site key (get from Google reCAPTCHA console)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_site_key_here

# reCAPTCHA secret key (server-side only)
RECAPTCHA_SECRET_KEY=your_secret_key_here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Database connection string (update based on your database type)
# For MongoDB:
# DATABASE_URL=mongodb://localhost:27017/martial_arts_db

# For PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/martial_arts_db

# For MySQL:
# DATABASE_URL=mysql://username:password@localhost:3306/martial_arts_db

DATABASE_URL=your_database_connection_string_here

# ===========================================
# EMAIL CONFIGURATION (for password reset, notifications)
# ===========================================
# SMTP settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=5242880

# Allowed file types for uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Upload directory
UPLOAD_DIR=./public/uploads

# ===========================================
# PAYMENT GATEWAY CONFIGURATION
# ===========================================
# Stripe configuration (if using Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Razorpay configuration (if using Razorpay for Indian market)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_SECRET=your_razorpay_secret

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Google Maps API key (for location services)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Analytics configuration
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate limiting configuration
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable certain features
NEXT_PUBLIC_ENABLE_REGISTRATION=true
NEXT_PUBLIC_ENABLE_PAYMENTS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ===========================================
# BRANCH & LOCATION CONFIGURATION
# ===========================================
# Default country for the application
NEXT_PUBLIC_DEFAULT_COUNTRY=India

# Default currency
NEXT_PUBLIC_DEFAULT_CURRENCY=INR

# Supported locations (comma-separated)
NEXT_PUBLIC_SUPPORTED_LOCATIONS=Hyderabad,Bangalore,Chennai,Mumbai,Delhi,Pune,Kolkata,Ahmedabad

# ===========================================
# LOGGING & MONITORING
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=debug

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Sentry DSN for error tracking (if using Sentry)
SENTRY_DSN=your_sentry_dsn

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Enable debug mode
DEBUG=true

# Show detailed error messages
SHOW_DETAILED_ERRORS=true

# Enable API request logging
ENABLE_API_LOGGING=true

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# Uncomment and modify these for production deployment:

# NEXT_PUBLIC_API_BASE_URL=https://api.yourdomain.com
# API_BASE_URL=https://api.yourdomain.com
# NODE_ENV=production
# DEBUG=false
# SHOW_DETAILED_ERRORS=false
# JWT_SECRET=your-production-jwt-secret-very-long-and-secure
# DATABASE_URL=your-production-database-url
# CORS_ORIGINS=https://yourdomain.com
# NEXT_PUBLIC_RECAPTCHA_ENABLED=true

# ===========================================
# NOTES:
# ===========================================
# 1. Never commit this file to version control with real credentials
# 2. Use different values for development, staging, and production
# 3. For client-side variables, use NEXT_PUBLIC_ prefix
# 4. Keep JWT_SECRET secure and unique for each environment
# 5. Update DATABASE_URL based on your actual database setup
# 6. Configure reCAPTCHA keys from Google reCAPTCHA console
# 7. Set up proper SMTP credentials for email functionality
# 8. Update payment gateway credentials based on your provider
